/opt/spacyserver/logs/*.log {
    daily
    rotate 14
    compress
    delaycompress
    missingok
    notifempty
    create 0644 spacy-filter spacy-filter
    sharedscripts
    postrotate
        systemctl reload spacy-db-processor >/dev/null 2>&1 || true
    endscript
}

/var/log/openefa_install.log {
    weekly
    rotate 4
    compress
    delaycompress
    missingok
    notifempty
    create 0644 root root
}
