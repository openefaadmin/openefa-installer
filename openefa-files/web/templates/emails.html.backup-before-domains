{% block scripts %}
<script>
    $(document).ready(function() {
        // Handle export button clicks
        $('#export-json-btn').click(function(e) {
            e.preventDefault();
            
            // Get all filter form inputs
            var filterParams = $('#filter-form').serialize();
            
            // Redirect to export URL with filters
            window.location.href = '/export/json?' + filterParams;
        });
        
        $('#export-csv-btn').click(function(e) {
            e.preventDefault();
            
            // Get all filter form inputs
            var filterParams = $('#filter-form').serialize();
            
            // Redirect to export URL with filters
            window.location.href = '/export/csv?' + filterParams;
        });
    });
</script>
{% endblock %}
